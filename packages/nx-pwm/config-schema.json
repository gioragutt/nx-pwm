{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "versionType": {
      "type": "string",
      "enum": ["synced", "independent"]
    },
    "depcheck": {
      "type": "object",
      "properties": {
        "ignore": {
          "type": "object",
          "properties": {
            "discrepancies": {
              "$ref": "#/definitions/ignoreConfig"
            },
            "missing": {
              "$ref": "#/definitions/ignoreConfig"
            }
          },
          "required": ["discrepancies", "missing"]
        }
      }
    },
    "versionCheck": {
      "type": "object",
      "properties": {
        "versionsFiles": {
          "type": "object",
          "properties": {
            "versionsFilesGlob": {
              "type": "string",
              "default": "**/versions.ts"
            },
            "scopes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "excludeVariables": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "localRegistry": {
      "type": "object",
      "properties": {
        "verdaccioConfig": {
          "type": "string",
          "description": "Path to the verdaccio config file"
        }
      },
      "required": ["verdaccioConfig"]
    }
  },
  "definitions": {
    "ignoreConfig": {
      "type": "object",
      "properties": {
        "*": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false,
  "required": ["versionType", "depcheck", "localRegistry"]
}
